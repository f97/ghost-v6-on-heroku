    "dependencies": {
        "ghost-storage-cloudinary": "^3.0.2",
        "mysql": "^2.18.1"
    },
    "devDependencies": {
        "tar": "^7.4.3"
    },
    "scripts": {
        "start": "node ghost/index.js",
        "preinstall": "yarn config set ignore-engines true",
